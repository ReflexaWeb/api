{
  "name": "reflexa-api",
  "version": "1.0.0",
  "description": "",
  "author": "Yan Soares",
  "scripts": {
    "start": "npm run build && node -r dotenv/config dist/main",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:cov": "npm t -- --coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "mg:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/infra/db/postgres/pg-connection.ts",
    "mg:run": "typeorm-ts-node-commonjs migration:run -d ./src/infra/db/postgres/pg-connection.ts",
    "mg:create": "sh -c 'typeorm-ts-node-commonjs migration:create ./src/infra/db/postgres/typeorm/migrations/$0'",
    "prepare": "husky install",
    "up": "docker-compose up -d"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.4.0",
    "module-alias": "^2.2.2",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.0.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.5",
    "lint-staged": "^12.3.8",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
